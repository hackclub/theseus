<% content_for :title, "Skus" %>

<style>
  /* Page-specific style to make SKUs wider than default container */
  .content-container {
    max-width: 100% !important;
    margin: 0 !important;
    padding-left: 1rem !important;
    padding-right: 1rem !important;
  }
</style>

<h1>SKUs:</h1>
<div class="mb-2">
  <a href="#" onclick="$('details').prop('open', true)">expand all</a>
</div>
<div id="warehouse_skus">
  <% @warehouse_skus.group_by(&:category).each do |cat, skus| %>
  <details>
    <summary>
      <span style="font-size: 1.5em"><%= cat.humanize %>:</span>
    </summary>
    <div class="warehouse-skus-grid">
      <% skus.each do |warehouse_sku| %>
        <div class="warehouse-sku-item">
          <%= render warehouse_sku %>
        </div>
      <% end %>
    </div>
  </details>
  <% end %>
</div>

<div class="mt-4">
  <% admin_tool(element: 'span') do %>
    <%= link_to "create SKU", new_admin_warehouse_sku_path %>
  <% end %>
</div>
