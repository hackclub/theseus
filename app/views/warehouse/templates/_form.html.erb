<%= form_with(model: warehouse_template) do |form| %>
  <% if warehouse_template.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(warehouse_template.errors.count, "error") %> prohibited this warehouse_template from being saved:</h2>

      <ul>
        <% warehouse_template.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

