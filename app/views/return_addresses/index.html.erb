<h1>Return Addresses</h1>

<div class="actions">
  <%= link_to "Add New Return Address", new_return_address_path, class: "btn btn-primary" %>
</div>

<div class="return-addresses-list">
  <% if @return_addresses.any? %>
    <div class="grid">
      <% @return_addresses.each do |address| %>
        <div class="card">
          <div class="address-header">
            <h3><%= address.name %></h3>
            <% if address.shared %>
              <span class="badge">Shared</span>
            <% end %>
            <% if address.user == current_user %>
              <span class="badge badge-primary">Mine</span>
            <% end %>
          </div>
          
          <div class="address-content">
            <%= address.line_1 %><br>
            <% if address.line_2.present? %><%= address.line_2 %><br><% end %>
            <%= address.city %>, <%= address.state %> <%= address.postal_code %><br>
            <%= address.country %>
          </div>
          
          <div class="address-actions">
            <% if address.user == current_user || current_user.admin? %>
              <%= link_to "Edit", edit_return_address_path(address), class: "btn btn-sm" %>
              <%= button_to "Delete", address, method: :delete, data: { confirm: "Are you sure you want to delete this return address?" }, class: "btn btn-sm btn-danger" %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p>No return addresses found.</p>
    <p><%= link_to "Create your first return address", new_return_address_path %></p>
  <% end %>
</div> 