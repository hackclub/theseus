<div class="window" style="width: 300px; margin-bottom: 1rem;">
  <div class="title-bar">
    <div class="title-bar-text">Letter <%= letter.public_id %></div>
    <div class="title-bar-controls">
      <%= w95_title_button_to "Maximize", public_letter_path(letter) %>
    </div>
  </div>
  <div class="window-body">
    <div>
      <b>Status:</b>
      <%= letter.aasm_state.humanize %>
    </div>
  </div>
</div>