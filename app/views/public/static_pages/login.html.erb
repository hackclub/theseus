<div class="window" style="width: 320px">
  <div class="title-bar">
    <div class="title-bar-text">Log in</div>
    <div class="title-bar-controls">
      <button aria-label="Close" onclick="window.location.href='/';"></button>
    </div>
  </div>
  <div class="window-body">
    <%= form_with url: send_email_path do |form| %>
      <div class="field-row">
        <%= form.label :email, "What's your email? " %>
        <%= form.text_field :email %>
      </div>
      <% if @error %>
        <br/><a style="color: #ac0808"><%= @error %></a> <br/><br/>
      <% end %>
      <%= form.submit "log in!" %>
    <% end %>
  </div>
</div>