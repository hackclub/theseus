<% letters.each do |letter| %>
  <article class="card">
    <div class="flex justify-between items-center mb-2">
      <h3 class="text-base font-medium"><%= link_to letter.public_id, letter %> to <%= letter.address.name_line %>
        <%= letter_status_badge(letter.aasm_state, 'float-right') %>
      </h3>
    </div>

    <div class="grid grid-cols-3 gap-1 text-sm text-gray-600">
      <div class="truncate">
        <span class="text-gray-400">From:</span>
        <%= letter.return_address.present? ? letter.return_address_name_line : 'N/A' %>
      </div>

      <div class="truncate">
        <span class="text-gray-400">Created:</span>
        <%= time_ago_in_words(letter.created_at) %> ago
      </div>

      <div class="truncate">
        <span class="text-gray-400">Size:</span>
        <%= letter.height %>" Ã— <%= letter.width %>"
      </div>
    </div>

    <div class="mt-2 flex items-center gap-2">
      <span class="text-gray-400">Tags:</span>
      <%= render 'shared/tags', tags: letter.tags %>
    </div>
  </article>
<% end %>
